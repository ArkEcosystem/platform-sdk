{
	"private": true,
	"name": "platform-sdk",
	"description": "Cross-Platform Utilities for ARK Applications",
	"engineStrict": true,
	"engines": {
		"node": "^12 || ^14"
	},
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"publish": "lerna run publish",
		"build": "lerna run build",
		"build:docs": "lerna run build:docs",
		"version": "lerna version",
		"format": "npm run lint && npm run prettier",
		"lint": "eslint packages/**/src/** --ext .ts --fix",
		"lint:tests": "eslint packages/**/src/** --ext .test.ts --fix",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "lerna run test",
		"toc:coins": "npx doctoc docs/coins/index.md"
	},

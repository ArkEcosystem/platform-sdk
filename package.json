{
	"name": "platform-sdk",
	"private": true,
	"description": "Cross-Platform Utilities for ARK Applications",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"publish": "yarn workspaces foreach -pt run publish",
		"build": "yarn workspaces foreach -pt run build",
		"build:docs": "yarn workspaces foreach -pt run build:docs",
		"version": "yarn workspaces foreach version",
		"version:apply": "yarn workspaces foreach version apply",
		"version:check": "yarn version check --interactive",
		"format": "yarn workspaces foreach -pt run format",
		"lint": "yarn workspaces foreach -pt run lint",
		"lint:tests": "yarn workspaces foreach -pt run lint:tests",
		"prettier": "yarn workspaces foreach -pt run prettier",
		"test": "yarn workspaces foreach -pt run test",
		"toc:coins": "yarn dlx doctoc docs/coins/index.md"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/eslint": "^7.2.4",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/jest": "^26.0.15",
		"@types/node": "^14.14.7",
		"@types/prettier": "^2.1.5",
		"@types/rimraf": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"@yarnpkg/pnpify": "^2.4.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-simple-import-sort": "^6.0.0",
		"eslint-plugin-unused-imports": "^1.0.1",
		"jest": "^26.6.3",
		"jest-extended": "^0.11.5",
		"nock": "^13.0.5",
		"npm-check-updates": "^10.1.1",
		"prettier": "^2.1.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.4.4",
		"typescript": "^4.0.5",
		"typescript-language-server": "^0.5.1"
	},
	"engines": {
		"node": "^12 || ^14",
		"yarn": "^2"
	},
	"engineStrict": true
}

generator client {
    provider      = "prisma-client-js"
    output        = "./generated"
    binaryTargets = ["debian-openssl-1.1.x", "darwin", "native"]
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Coin {
    id     Int    @id @default(autoincrement())
    uuid   String @unique
    name   String
    symbol String
    alias  String
    data   Json
    teams  Team[]
}

model Team {
    id      Int      @id @default(autoincrement())
    coin    Coin     @relation(fields: coin_id, references: id)
    coin_id Int
    uuid    String   @unique
    name    String
    slug    String
    symbol  String
    data    Json
    signals Signal[]
}

model Signal {
    id                Int      @id @default(autoincrement())
    team              Team     @relation(fields: team_id, references: id)
    team_id           Int
    uuid              String   @unique
    text              String
    rich_text         Json
    date_active       DateTime
    date_created      DateTime
    date_updated      DateTime
    attributed_author Json
    category          Json
    is_featured       Boolean
    data              Json
}

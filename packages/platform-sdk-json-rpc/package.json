{
    "name": "@arkecosystem/platform-sdk-json-rpc",
    "version": "3.0.40",
    "description": "Cross-Platform Utilities for ARK Applications",
    "license": "MIT",
    "contributors": [],
    "main": "dist/index",
    "types": "dist/index",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "pnpm run clean && tsc",
        "build:watch": "pnpm run build -- -w",
        "clean": "rimraf .coverage dist tmp",
        "test": "jest --forceExit",
        "test:watch": "jest --forceExit --watchAll",
        "publish": "pnpm run build && pnpm run npm publish --access public --force",
        "format": "pnpm run lint && pnpm run prettier",
        "lint": "eslint src/**/*.ts --fix",
        "lint:tests": "eslint src/**/*.test.ts --fix",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\""
    },
    "jest": {
        "preset": "../../jest.config.js"
    },
    "dependencies": {
        "@hapi/hapi": "^20.1.0",
        "@kodekeep/hapi-json-rpc": "^1.0.0",
        "pino": "^6.11.0"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.7.0",
        "@types/eslint": "^7.2.4",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/hapi__hapi": "20.0.2",
        "@types/jest": "^26.0.15",
        "@types/pino": "^6.3.5",
        "@types/prettier": "^2.1.5",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-simple-import-sort": "^6.0.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "jest-localstorage-mock": "^2.4.3",
        "nock": "^13.0.5",
        "npm-check-updates": "^10.1.1",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "typescript": "4.0.5"
    },
    "engines": {
        "node": ">=12.x"
    }
}
